
<div class="card" style="width: 18rem;">
    <h5 class="card-header">Friend</h5>
  <div class="card-body">
    <p class="card-text"><strong>First name: </strong><%= @friend.first_name %></p>
    <p class="card-text"><strong>Last name: </strong><%= @friend.last_name %></p>
    <p class="card-text"><strong>Email: </strong><%= @friend.email %></p>
    <p class="card-text"><strong>Phone: </strong><%= @friend.phone %></p>
    <p class="card-text"><strong>Twitter: </strong><%= @friend.twitter %></p>

    <%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-secondary" %> 
    <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    <%= link_to 'Back', friends_path, class: "btn btn-secondary" %>
  </div>
</div>

